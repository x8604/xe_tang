<launch>
  <rosparam file="$(find xe_tang)/config/controller.yaml" command="load"/>

  <node name="xe_tang_controller_spawner" pkg="controller_manager" type="spawner"
  respawn="true" output="screen" 
  args="/xe_tang/joint_state_controller
        /xe_tang/mobile_base_controller
        --shutdown-timeout 3"/>

  <include file="$(find gazebo_ros)/launch/empty_world.launch"/>

  <param name="robot_description" command="$(find xacro)/xacro $(find xe_tang)/description/xe_tang.urdf.xacro"/>

  <node name="spawn_model" pkg="gazebo_ros" type="spawn_model" args="-urdf -model xe_tang -param robot_description"/>

  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"
        respawn="false" output="screen"/>

  <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher"/>

  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find xe_tang)/config/xe_tang.rviz" required="true"/>

  <node name="rqt_robot_steering" pkg="rqt_robot_steering" type="rqt_robot_steering">
    <param name="default_topic" value="/xe_tang/mobile_base_controller/cmd_vel"/> 
  </node>
</launch>
